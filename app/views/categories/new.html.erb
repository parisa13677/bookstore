<h2> Add New Category</h2>
<%= form_for @category do |f|%>
     <div class="from-group">
       <%= f.label :name %><br />
       <%= f.text_field :name, class : 'from-control' %><br />
  </div>

  <%= f.submit "submit", class:'btn btn-primary'%>
  <%=link_to 'Cancel', categories_path, class:'btn btn-default'%>
<% end %>
