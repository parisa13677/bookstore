<h2> Add New Book,</h2>
<%= from_for @book do |f|%>
   <div class="from-group">
       <%= f.label :title %><br />
       <%= f.text_field :title, class : 'from-control' %><br />
  </div>

  <div class="from-group">
       <%= f.label :isbn %><br />
       <%= f.text_field :isbn, class : 'from-control' %><br />
  </div>

  <div class="from-group">
       <%= f.label :category %><br />
       <%= f.Select :category_id, Category.all.collect {|x| [x.name, x.id]},{:
       include_blank => 'Select One'},class : 'from-control' %><br /><br />
  </div>

  <div class="from-group">
       <%= f.label :author %><br />
       <%= f.Select :author_id, Author.all.collect {|x| [x.name, x.id]},{:
       include_blank => 'Select One'},class : 'from-control' %><br /><br />
  </div>

  <div class="from-group">
       <%= f.label :publisher %><br />
       <%= f.Select :publisher_id, Publisher.all.collect {|x| [x.name, x.id]},{:
       include_blank => 'Select One'},class : 'from-control' %><br /><br />
  </div>

  <div class="from-group">
       <%= f.label :format %><br />
       <%= f.text_field :format, class : 'from-control' %><br />
  </div>

  <div class="from-group">
       <%= f.label :excerpt %><br />
       <%= f.text_area :excerpt, class : 'from-control' %><br />
  </div>

  <div class="from-group">
       <%= f.label :pages %><br />
       <%= f.text_field :pages, class : 'from-control' %><br />
  </div>

  <div class="from-group">
       <%= f.label :price %><br />
       <%= f.text_field :price, class : 'from-control' %><br />
  </div>

  <div class="from-group">
       <%= f.label buy %><br />
       <%= f.text_field :buy, class : 'from-control' %><br />
  </div>

  <%= f.submit "submit", class:'btn btn-primary'%>
  <%=link_to 'Cancel', books_path, class:'btn btn-default'%>

<% end %>
